<li class="selected-item ui-id-<%= group_item.id %>">
	<div class="selected-item-info clearfix" data-id="<%= group_item.id %>">
		<div class="item-info-left">
			<a href=<%= group_item.item_url %> target="_blank">
				<img src=<%= group_item.image_url %>>
			</a>
		</div>
		<div class="item-info-middle">
			<p><%= group_item.item_name%></p>
			<p><%= group_item.item_address%></p>
		</div>
		<div class="item-info-right">
			<%= image_tag "gurume-icon.png", :class => "top-img"%>
		</div>
	</div>
</li>