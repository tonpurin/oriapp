var group_item_id = (<%= @destroy_group_item_id %>);

// マーカーの情報を削除
markers[group_item_id].setMap(null);
delete markers[group_item_id];
var array_index = markers_id_order.indexOf(group_item_id);
markers_id_order.splice(array_index, 1);

// リストから消去
$(".ui-id-" + group_item_id).remove(); // 子要素もすべて消去

// 選択中アイテムのgonから要素を消去
var destroy_item_index = $.inArray(group_item_id, gon.group_items_info[2]);
var destroy_item_id = gon.group_items_info[0][destroy_item_index]; // 作業用
gon.group_items_info[0].splice(destroy_item_index, 1);
gon.group_items_info[1].splice(destroy_item_index, 1);
gon.group_items_info[2].splice(destroy_item_index, 1);

// iineボタンにトグル
if (gon.current_item_id == destroy_item_id){
	// アイテムリストから消去される事を考慮
	$('.iine-button').show();
	$('.yokunaine-button').hide();
};

// yokunaineボタンのリクエストを調整
set_current_item_info();