<div class="login-contents">
  <div class="form-wrapper">
    <h1 style="font-size: 70px;">Log In</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field form-item">
          <%= f.email_field :email, autofocus: true, :placeholder => "Email Address"%>
      </div>

      <div class="field form-item">
          <%= f.password_field :password, autocomplete: "off", :placeholder => "Password"%>
      </div>

      <div class="actions button-panel">
          <%= f.submit "Log in", :class => "user_button"%>
      </div>
    <% end %>

    <!-- Sign_up, Forgotへのリンク...デフォルトでは_links.html.erbで部分テンプレート化されてる -->
    <div class="devise-link">
      <%= link_to "Sign up", new_registration_path(resource_name), :class => "user_button"%>
    </div>

    <div class="devise-link">
      <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "user_button"%>
    </div>
  </div>

  <!-- deviseがよしなに表示してくれる(笑) -->
  <div class="devise-notice">
    <p class="notice" style="font-size: 25px; line-height: 150%;"><%= notice %></p>
    <p class="alert" style="font-size: 25px; line-height: 150%;"><%= alert %></p>
  </div>

</div>