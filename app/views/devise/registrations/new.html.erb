<div class="login-contents">
  <div class="form-wrapper">
    <h1 style="font-size: 70px;">Sign up</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

      <div class="field form-item">
          <%= f.email_field :email, autofocus: true, :placeholder => "Email Address"%>
      </div>

      <div class="field form-item">
          <%= f.text_field :unique_name, autofocus: true, :placeholder => "User ID"%>
      </div>

      <div class="field form-item">
        <%= f.password_field :password, autocomplete: "off", :placeholder => "Password #{@minimum_password_length} minimum" %>
      </div>

      <div class="field form-item">
        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Password Confirmation" %>
      </div>

      <div class="actions button-panel">
          <%= f.submit "Sign up", :class => "user_button"%>
      </div>
    <% end %>

    <!-- Log_inへのリンク...デフォルトでは_links.html.erbで部分テンプレート化されてる -->
    <div class="devise-link">
      <%= link_to "Log in", new_session_path(resource_name),:class => "user_button" %>
    </div>
  </div>
</div>